{
  "manifest_version": 3,
  "name": "Chess Clock Mouse Follower",
  "description": "Makes the chess clock follow your mouse during time scrambles.",
  "version": "1.0",
  "browser_action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://lichess.org/*"
      ],
      "js": [
        "waitForMount.js",
        "Time.js",
        "onMutate.js",
        "ClockMouseFollower.js",
        "contentScript.js"
      ],
      "css": [
        "ClockMouseFollower.css"
      ]
    }
  ],
  "permissions": [
    "storage"
  ]
}
